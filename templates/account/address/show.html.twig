{% extends 'account/index.html.twig' %}

{% block content %}

    <a href="{{ path('app_address_add') }}" class="btn btn-md btn-primary mb-3">Ajouter une adresse</a>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        {% if addresses is not null %}
            {% for address in addresses %}
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <h4 class="text-center"> Adresse {{ loop.index}} </h4>
                    </div>
                    <div class="card-body">
                        <address class="d-flex flex-column">
                            <span class="mb-1">
                                <span class="text-muted text-uppercase title">Nom:</span>
                                <span class="">{{ address.name }}</span>
                            </span>
                            <span class="mb-1">
                                <span class="text-muted text-uppercase">Société:</span>
                                <span class="">{{ address.company }}</span>
                            </span>
                            <span class="mb-1">
                                <span class="text-muted text-uppercase">Adresse:</span>
                                <span class="">{{ address.address }}</span>
                            </span>

                            {#
                            {% if address.complement is not null %}
                                <span class="d-flex justify-content-between mb-1">
                                    <span class="fs-6">Complément d'adresse:</span>
                                    <span class="">{{ address.complement }}</span>
                                </span>
                            {% endif %}
                            #}

                            <span class="mb-1">
                                <span class="text-muted text-uppercase">Ville:</span>
                                <span class="">{{ address.city }}</span>
                            </span>
                            <span class="mb-1">
                                <span class="text-muted text-uppercase">Code Postal:</span>
                                <span class="">{{ address.postal }}</span>
                            </span>
                            <span class="mb-1">
                                <span class="text-muted text-uppercase">Téléphone:</span>
                                <span class="">{{ address.phone }}</span>
                            </span>
                        </address>
                    </div>
                    <div class="card-footer py-3">
                        <div class="btn-group d-flex justify-content-between mx-1">
                            <a href="{{ path('app_address_edit', {'id':address.id}) }}" class="btn btn-md btn-warning rounded mx-2">Modifier</a>
                            <!--<a href="#" class="btn btn-md btn-danger rounded">Supprimer</a>-->
                            <a href="#"
                               class="btn btn-md btn-danger rounded"
                               onclick="event.preventDefault(); confirm('Êtes-vous sûr de vouloir supprimer cette adresse ?') && document.getElementById('js-event-deletion-form').submit();">
                                <form id="js-event-deletion-form"
                                      action="{{ path('app_address_delete', {'id': address.id}) }}"
                                      method="POST">
                                    <input type="hidden" name="csrf_token"
                                       value="{{ csrf_token('address_deletion_' ~ address.id) }}"
                                    >
                                </form>
                                Supprimer
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        {% endif %}
    </div>
{% endblock %}
