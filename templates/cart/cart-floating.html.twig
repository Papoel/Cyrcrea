<div id="cart-hidden" class="card" style="width: 18rem;">
    <div class="card-header"><h5>Mon panier</h5></div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Produit</th>
                    <th scope="col">Infos</th>
                    <th scope="col">Supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for element in app.session.get('cartData') %}
                    <tr>
                        <td class="align-middle {{ loop.last ? "border border-0" :"" }}" rowspan="2">{{ element.product.name }}</td>
                        <td class="border border-0 text-center">x {{ element.quantity }}</td>
                        <td class="text-center align-middle {{ loop.last ? "border border-0" :"" }}" colspan="2" rowspan="2"><a href="{{ path('delete_all_from_cart', {'id': element.product.id}) }}"><i class="text-danger bi bi-trash3"></i></a></td>
                    </tr>
                    <tr>
                        <td colspan="2"  class="{{ loop.last ? "border border-0" :"" }} not-first-cell text-start">{{ element.prixTotal / 100 }} â‚¬</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
