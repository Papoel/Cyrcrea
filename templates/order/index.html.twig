{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Reference</th>
                <th>FullName</th>
                <th>CarrierName</th>
                <th>CarrierPrice</th>
                <th>DeliveryAddress</th>
                <th>IsPaid</th>
                <th>MoreInformations</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.reference }}</td>
                <td>{{ commande.fullName }}</td>
                <td>{{ commande.carrierName }}</td>
                <td>{{ commande.carrierPrice }}</td>
                <td>{{ commande.deliveryAddress }}</td>
                <td>{{ commande.isPaid ? 'Yes' : 'No' }}</td>
                <td>{{ commande.moreInformations }}</td>
                <td>{{ commande.createdAt|date('Y-m-d H:i:s') }}</td>
                <td>
                    <a href="#">show</a>
                    <a href="#">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_order_new') }}">Create new</a>
{% endblock %}
