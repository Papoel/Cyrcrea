<div class="card m-3 g-4">
    <div class="card-body">
        {# Les indicateurs du carousel #}
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                {% for iteration in 1.. new.images|length %}
                    <button type="button"
                            data-bs-target="#carouselExampleIndicators"
                            data-bs-slide-to="{{ iteration - 1 }}"
                            {{ (loop.first) ? 'class="active" aria-current="true"' : '' }}
                            aria-label="Slide {{ iteration }}">
                    </button>
                {% endfor %}
            </div>

            {# Carousel #}
            <div class="carousel-inner">
                {% for image in new.images %}
                    <div class="carousel-item {{ (loop.first) ? 'active' : '' }}">
                        <img src="{{ asset('images/uploads/' ~ image.name ~ '.png') }}" class="d-block w-50" alt="{{ new.name }}">
                    </div>
                {% endfor %}
            </div>

            {# Boutton pour changer de slide #}
            <button type="button"
                    class="carousel-control-prev"
                    data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Précédente</span>
            </button>
            <button type="button"
                    class="carousel-control-next"
                    data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Suivante</span>
            </button>
        </div>
    </div>
</div>
