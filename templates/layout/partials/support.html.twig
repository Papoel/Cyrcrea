{# Création d'une carte + formulaire de contact avec select box de problèmes #}
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-envelope mr-1"></i>
        Une réclamation / Une question ?
    </div>
    <div class="card-body">
{#        <form method="post" action="{{ path('contact') }}">#}
        <form method="post" action="">
            <div class="form-group mb-2">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Votre email">
            </div>
            <div class="form-group mt-2">
                <label for="subject">Sujet</label>
                <input type="text" class="form-control" id="subject" name="subject" placeholder="Sujet">
            </div>
            <div class="form-group mt-2">
                <label for="message">Message</label>
                <textarea class="form-control" id="message" name="message" rows="3"></textarea>
            </div>
            <div class="form-group mt-2">
                <label for="problem">Problème</label>
                <select class="form-control" id="problem" name="problem">
                    <option value="1">Problème 1</option>
                    <option value="2">Problème 2</option>
                    <option value="3">Problème 3</option>
                </select>
            </div>
            <button type="submit" class=" mt-3 d-block mx-auto w-75 btn btn-outline-primary">Envoyer</button>
        </form>
    </div>
</div>
