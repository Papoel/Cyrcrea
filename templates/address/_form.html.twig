<div class="container">
    {{ form_start(form, {attr: {'novalidate': 'novalidate'}} ) }}
        {#{{ form_widget(form) }}#}
        <div class="row">
            <div class="col-md-6 mt-3">
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>
            </div>
            <div class="col-md-6 mt-3">
                <div class="form-group">
                    {{ form_label(form.company) }}
                    {{ form_widget(form.company) }}
                    {{ form_errors(form.company) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mt-3">
                <div class="form-group">
                    {{ form_label(form.address) }}
                    {{ form_widget(form.address) }}
                    {{ form_errors(form.address) }}
                </div>
            </div>
            <div class="col-md-6 mt-3">
                <div class="form-group">
                    {{ form_label(form.complement) }}
                    {{ form_widget(form.complement) }}
                    {{ form_errors(form.complement) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mt-3">
                <div class="form-group">
                    {{ form_label(form.postal) }}
                    {{ form_widget(form.postal) }}
                    {{ form_errors(form.postal) }}
                </div>
            </div>
            <div class="col-md-4 mt-3">
                <div class="form-group">
                    {{ form_label(form.city) }}
                    {{ form_widget(form.city) }}
                    {{ form_errors(form.city) }}
                </div>
            </div>
            <div class="col-md-4 mt-3">
                <div class="form-group">
                    {{ form_label(form.country) }}
                    {{ form_widget(form.country) }}
                    {{ form_errors(form.country) }}
                </div>
            </div>
        </div>

         <div class="row">
            <div class="col-md-4 mt-3">
                <div class="form-group">
                    {{ form_label(form.phone) }}
                    {{ form_widget(form.phone) }}
                    {{ form_errors(form.phone) }}
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center my-5">
            <button class="btn bt-md btn-primary w-50 rounded me-1">{{ button_label|default('Sauvegarder') }}</button>
            <a class="btn btn-info w-50 ms-1" href="{{ path('app_compte') }}">Retour au compte</a>
        </div>
    </div>

    {{ form_end(form) }}
</div>
