<div class="card my-4">
    <div class="card-header">
         <h3>{{ name }}</h3>
    </div>
    <div class="card-body">
        {{ form_start(formAddress) }}
            <div class="row">

                <div class="form-group col-md-6">
                    {{ form_row(formAddress.name) }}
                </div>

                <div class="form-group col-md-6">
                    {{ form_row(formAddress.company) }}
                </div>

                <div class="form-group col-md-6">
                    {{ form_row(formAddress.address) }}
                </div>

                <div class="form-group col-md-6">
                   {{ form_row(formAddress.complement) }}
                </div>

                <div class="form-group col-md-4">
                    {{ form_row(formAddress.postal) }}
                </div>

                <div class="form-group col-md-4">
                    {{ form_row(formAddress.city) }}
                </div>

                <div class="form-group col-md-4">
                    {{ form_row(formAddress.country) }}
                </div>

                <div class="form-group col-md-4">
                    {{ form_row(formAddress.phone) }}
                </div>

                <div class="py-3">
                        <div class="btn-group d-flex justify-content-between">
                            <button type="submit" class="btn btn-md btn-primary rounded me-1" name="submit" value="Submit">Enregistrer</button>
                            <a href="{{ path('app_address_show') }}" class="btn btn-md btn-outline-danger rounded ms-1">Retour</a>
                        </div>
                    </div>
            </div>
        {{ form_end(formAddress) }}
    </div>
</div>
