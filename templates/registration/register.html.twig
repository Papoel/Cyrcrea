{% extends 'base.html.twig' %}

{% block title %}Enregistrez vous{% endblock %}

{% block body %}

    {{ include('partials/_title_section.html.twig', {'name': "Formulaire d'inscription"})  }}

    <div class="login_register_wrap section mt-3 mb-3">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-10">
                    <div class="login_wrap">
                        <div class="p-5 bg-white">
                            <div class="heading_s1">
                                <h3 class="text-center p-3">Création d'un compte</h3>
                            </div>
                            <div class="message-flash">
                                {% for flash_error in app.flashes('verify_email_error') %}
                                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                                {% endfor %}
                            </div>
                            {{ form_start(registrationForm) }}
                                <div class="form-row mx-2">
                                    <div class="row">
                                        <div class="col-md-6">{{ form_row(registrationForm.firstname) }}</div>
                                        <div class="col-md-6">{{ form_row(registrationForm.lastname) }}</div>
                                    </div>
                                </div>
                                <div class="form-group mx-2">
                                    {{ form_row(registrationForm.email) }}
                                </div>
                                <div class="form-group mx-2">
                                    {{ form_row(registrationForm.plainPassword) }}
                                </div>
                                <div class="redirection form-group mx-2 mb-3">
                                    <div class="check-form">
                                        <div class="custom-checkbox">
                                            {{ form_row(registrationForm.agreeTerms) }}
                                            <a href="{{ path('app_cgu') }}" target="_blank">Lire les conditions.</a>
                                            <label class="form-check-label" for="term">
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mx-2">
                                    <button type="submit" class="btn btn-primary w-100" name="register">S'inscrire</button>
                                </div>

                            {{ form_end(registrationForm) }}

                            <div class="different_login">
                                <span>ou</span>
                            </div>

                            <ul class="btn-login list_none text-center">
                                <li>
                                    <a href="#" class="btn-facebook">
                                        <i class="bi bi-facebook"></i>Facebook</a>
                                </li>
                                <li>
                                    <a href="#" class="btn-google">
                                        <i class="bi bi-google"></i>Google</a>
                                </li>
                            </ul>

                            <div class="form-note text-center py-2 bg-light">
                                <span >Vous avez déjà un compte ?</span>
                                <a id="to-login" href="{{ path('app_login') }}">Se connecter</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
