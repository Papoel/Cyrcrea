{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {{ include('partials/_title_section.html.twig', {name:'Réinitialisation du mot de passe'}) }}

    <div class="container mt-5 w-50">
        <div class="card border-light rounded">
            <div class="card-header text-center">
                <h3>Réinitialisation du mot de passe</h3>
            </div>
            <div class="card-body">
                <div class="content">
                    {{ form_start(resetForm) }}
                        {{ form_row(resetForm.plainPassword) }}
                        <button class="btn btn-primary">Réinitialiser le mot de passe</button>
                    {{ form_end(resetForm) }}
                </div>
            </div>
            <div class="card-footer mb-4">
                <div class="d-flex justify-content-center mt-2">
                    <p class="fs-6">
                        Vous n'avez pas de compte ?
                        <a class="link" href="{{ path('app_register')}}"> Inscrivez-vous maintenant.</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
