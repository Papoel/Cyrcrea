{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {{ include('layout/partials/_title_section.html.twig', {name:'Réinitialisation du mot de passe'}) }}

    <div class="container mt-5 w-50">
        <div class="card border-light rounded">
            <div class="card-header text-center">
                <h3>Demande de réinitialisation du mot de passe</h3>
            </div>
            <div class="card-body">
                <div class="message-flash">
                    {% for flash_error in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}
                </div>
                {{ form_start(requestForm) }}
                    {{ form_row(requestForm.email) }}
                    <div>
                        <small class="text-muted" style="font-style: italic">
                            Saisissez votre adresse email et nous vous enverrons un lien pour réinitialiser
                            votre mot de passe.
                        </small>
                    </div>
                    <button class="btn btn-primary my-3 d-block mx-auto">
                        Envoyer un email de réinitialisation du mot de passe
                    </button>
                {{ form_end(requestForm) }}
            </div>

            <div class="card-footer mb-4">
                <div class="d-flex justify-content-center mt-2">
                    <p class="fs-6">
                        Vous n'avez pas de compte ?
                        <a class="link" href="{{ path('app_register')}}"> Inscrivez-vous maintenant.</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
