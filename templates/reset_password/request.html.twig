{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {{ include('partials/_title_section.html.twig', {name:'Réinitialisation du mot de passe'}) }}

    <div class="login_register_wrap section mt-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-10">
                    <div class="login_wrap">
                        <div class="p-4 bg-white">
                            <div class="my-3 fw-bold">
                                <h3>Réinitialisation du mot de passe</h3>
                            </div>

                            <div class="content">
                                <div class="message-flash">
                                    {% for flash_error in app.flashes('reset_password_error') %}
                                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                                    {% endfor %}
                                </div>
                                {{ form_start(requestForm) }}
                                    {{ form_row(requestForm.email) }}
                                    <div>
                                        <small class="text-muted" style="font-style: italic">
                                            Saisissez votre adresse email et nous vous enverrons un lien pour réinitialiser
                                            votre mot de passe.
                                        </small>
                                    </div>
                                    <button class="btn btn-primary my-3 d-block mx-auto">
                                        Envoyer un email de réinitialisation du mot de passe
                                    </button>
                                {{ form_end(requestForm) }}
                            </div>

                            <div class="form-note text-center">Vous n'avez pas de compte ?
                                <a href="{{ path('app_register')}}">Inscrivez-vous maintenant.</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
